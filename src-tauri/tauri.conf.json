{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "delta",
  "version": "0.1.1",
  "identifier": "cc.noro.delta",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Delta",
        "center": true,
        "width": 800,
        "height": 600
      },
      {
        "label": "message_overlay",
        "title": "Message Overlay",
        "url": "/app/overlay",
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "transparent": true,
        "create": false,
        "visible": false,
        "contentProtected": true,
        "dragDropEnabled": false,
        "skipTaskbar": true,
        "closable": false,
        "focus": false,
        "width": 300,
        "height": 100,
        "y": 0,
        "x": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQzMDJGOUEyMTQxNkFDMzgKUldRNHJCWVVvdmtDUXo5SHRydEMzQ2lpT1pRSTgzY1A4V3U2eHNCZk5YVHFsQmtpWjhaaEpnWjAK",
      "windows": {
        "installMode": "passive"
      },
      "endpoints": ["https://github.com/norowachi/DeltaApp/releases/latest/download/latest.json"]
    }
  }
}
